{% extends 'base.html.twig' %}

{% block body %}
    {% block header %}    
        <div class="container d-flex justify-content-between align-items-baseline py-3 border-bottom">
            <div class="h2">
                <p>Bienvenido</p>
            </div>

            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
                    <li class="nav-item active">
                      <a class="nav-link" href="{{ path('home') }}">Home<span class="sr-only">(current)</span></a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                      <a class="nav-link" href="{{ path('user_podcasts') }}">Mis podcasts</a>
                    </li>
                    {% endif %}
                  </ul>
                </div>
            </nav>

            <div>
                <p><a href="{{ path('app_login') }}">Login</a> / <a href="{{ path('app_register') }}">Registro</a></p>
            </div>
        </div>
    {% endblock %}

    {% block content %}{% endblock %}

    {% block footer %}
        <div>
            <div class="container-fluid row d-flex justify-content-between mx-auto border-top p-5">
                <div class="col-4 text-center"><p>Aplicación web desarrollada en Symfony sin fines comerciales para Doctaforum.</p></div>
                <div class="col-4 text-center"><p>Diego García Ortiz</p></div>
                <div class="col-4 text-center">
                    <p>
                        PHP 7.4 <br>
                        MySQL 5.7 <br>
                        Symfony 5 <br>
                        Bootstrap <br>
                    </p>
            </div>
            </div>
            <div class="container row mx-auto border-top">
                <div class="col-12 text-center">
                    <p>Repositorio</p>
                    <p><a href="https://github.com/dgarciaortiz94/doctaforumpodcast">https://github.com/dgarciaortiz94/doctaforumpodcast</a></p>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}