{% extends 'base.html.twig' %}

{% block body %}
    {% block header %}    
        <div class="container d-flex justify-content-between align-items-baseline py-3 border-bottom">
            <nav class="navbar navbar-expand-lg navbar-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
              
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                  <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                      <a class="nav-link" href="{{ path('home') }}">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                    {% if is_granted('ROLE_USER') %}
                        <a class="nav-link" href="{{ path('user_podcasts') }}">Area usuario</a>
                    {% endif %}
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item active">
                      <a class="nav-link" href="{{ path('adminpanel.show_podcasts') }}">Panel de control</a>
                    </li>
                    {% endif %}
                  </ul>
              </nav>
            <div>
                {% if app.user is defined and app.user is not null%}
                    <p><a href="{{ path('app_logout') }}">Cerrar sesión</a></p>
                {% else %}
                    <p><a href="{{ path('app_login') }}">Login</a> / <a href="{{ path('app_register') }}">Registro</a></p>
                {% endif %}
            </div>
        </div>
    {% endblock %}

    <section>
    {% block content %}{% endblock %}
    </section>

    {% block footer %}
        <footer class="footer container-fluid">
            <div class="row d-flex justify-content-between mx-auto border-top px-5 pt-4 pb-2">
                <div class="col-4 text-center"><p>Aplicación web desarrollada en Symfony sin fines comerciales para Doctaforum.</p></div>
                <div class="col-4 text-center"><p>Diego García Ortiz</p></div>
                <div class="col-4 text-center">
                    <p>
                        PHP 7.4 <br>
                        MySQL 5.7 <br>
                        Symfony 5 <br>
                        Bootstrap <br>
                    </p>
            </div>
            </div>
            <div class="container row mx-auto border-top">
                <div class="col-12 text-center">
                    <p>Repositorio</p>
                    <p><a href="https://github.com/dgarciaortiz94/doctaforumpodcast">https://github.com/dgarciaortiz94/doctaforumpodcast</a></p>
                </div>
            </div>
        </footer>
    {% endblock %}
{% endblock %}