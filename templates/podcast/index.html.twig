{% extends 'base.html.twig' %}

{% block title %}Podcast index{% endblock %}

{% block body %}
    <h1>Podcast index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Audio</th>
                <th>Picture</th>
                <th>CreateDate</th>
                <th>IsActive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for podcast in podcasts %}
            <tr>
                <td>{{ podcast.id }}</td>
                <td>{{ podcast.title }}</td>
                <td>{{ podcast.description }}</td>
                <td>{{ podcast.audio }}</td>
                <td>{{ podcast.picture }}</td>
                <td>{{ podcast.createDate ? podcast.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ podcast.isActive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('podcast_show', {'id': podcast.id}) }}">show</a>
                    <a href="{{ path('podcast_edit', {'id': podcast.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('podcast_new') }}">Create new</a>
{% endblock %}
