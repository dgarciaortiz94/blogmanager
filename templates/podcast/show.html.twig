<div>
    <div class="picture-podcast mb-3" style="background-image: url({{ asset('images/podcasts/' ~ podcast.picture) }})">
        <div class="dark-filter d-flex">
            <h1 class="py-4 px-5 text-white">{{ podcast.title }}</h1>
        </div>
    </div>
    <div class="border-bottom d-flex justify-content-between align-items-baseline mb-4 px-4">
        <div>
            <p><i>{{ podcast.createDate | date("d") }} de {{ podcast.createDate | date("F") }} de {{ podcast.createDate | date("Y H:i") }}</i></p>
        </div>
        <div>
            <i class="bi bi-chat-fill open-comment text-danger position-relative"></i>
        </div>
    </div>
    <audio src="{{asset('audios/podcasts/' ~ podcast.audio)}}" controls="controls" class="w-100 mb-3"></audio>
    <p>{{ podcast.description | raw }}</p>
</div>