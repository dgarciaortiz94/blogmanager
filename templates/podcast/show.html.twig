{% extends 'base.html.twig' %}

{% block title %}Podcast{% endblock %}

{% block body %}
    <h1>Podcast</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ podcast.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ podcast.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ podcast.description }}</td>
            </tr>
            <tr>
                <th>Audio</th>
                <td>{{ podcast.audio }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ podcast.picture }}</td>
            </tr>
            <tr>
                <th>CreateDate</th>
                <td>{{ podcast.createDate ? podcast.createDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ podcast.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('podcast_index') }}">back to list</a>

    <a href="{{ path('podcast_edit', {'id': podcast.id}) }}">edit</a>

    {{ include('podcast/_delete_form.html.twig') }}
{% endblock %}
