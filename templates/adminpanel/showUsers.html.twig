{% extends 'layout-admin.html.twig' %}

{% block title %}Hello AdminpanelController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/podcasts-admin.css') }}">
{% endblock %}

{% block content %}
<p class="h4 py-2 text-secondary border-bottom border-secondary">Todos los podcasts</p>
<table class="table table-striped text-center my-5">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Email</th>
            <th scope="col">Ver podcasts</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <th scope="row">{{ user.id }}</th>
            <td>{{ user.name }}</td>
            <td>{{ user.firstname }} {{ user.lastname }}</td>
            <td>{{ user.email }}</td>
            <td><a href=""><button class="btn btn-warning">O</button></a></td>
            <td>
                <button class="btn btn-warning">E</button>
                <button class="btn btn-danger">B</button>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
